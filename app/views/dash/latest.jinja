<div id="data" class="flex flex-col w-screen h-7/8 overflow-auto p-4">
    <h1 class="font-semibold text-center underline">
        Latest Transactions for HH No. {{hshd}}
    </h1>
    <div class="flex flex-row items-center">
        <div class="grow"></div>
        <p class="font-semibold">
            No. of Transactions Shown:
        </p>
        <input 
            name="count" type="numeric" min="1" value="{{count}}"
            class="border rounded-lg font-semibold text-sm p-1 m-1"
            hx-get="/dash/latest/{{hshd}}"
            hx-trigger="keyup changed delay:1s" hx-target="#data" hx-swap="outerHTML"
        >
        <button 
            class="bg-sky-700 border rounded-lg border-black font-semibold text-white text-sm p-1" 
            hx-get="/dash/data/{{hshd}}/0" hx-target="#data" hx-swap="outerHTML"
        >
            View All Transactions 
        </button>
        <div class="grow"></div>
    </div>
    <table class="border-collapse border border-black my-2">
        <tr>
            {% for h in header %}
                <th class="border border-black px-1 text-sm">{{h}}</th>
            {% endfor %}
        </tr>
        {% for row in rows %}
            <tr>
                {% for col in row %}
                    <td class="border border-black px-1 text-sm">{{col}}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
</div>